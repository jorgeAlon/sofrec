{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "/mailsender/templates/*.hbs",
        "outDir": "dist/src",
        "watchAssets": true
      },
      {
        "include": "../client/dist/**/*",
        "outDir": "dist/client",
        "watchAssets": true
      }
    ]
  }
}
